@model IEnumerable<ValidadorXml.Models.DB.Informacion>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RfcEmisor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RfcReceptor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FolioFiscal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEmision)
            </th>
