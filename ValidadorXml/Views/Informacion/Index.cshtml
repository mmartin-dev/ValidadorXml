        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RfcEmisor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RfcReceptor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FolioFiscal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEmision)
            </td>
